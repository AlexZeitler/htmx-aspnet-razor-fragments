@model Registration

@{
  Layout = null;
}

<form class="space-y-6"
      hx-post
      hx-swap="outerHTML"
      hx-action="PostForm"
      hx-controller="Registration">
  <div class="grid grid-cols-2 gap-3">
    <div>
      <label asp-for="FirstName"
             class="block text-sm font-medium text-gray-700">
      </label>
      <div class="mt-1">
        <input type="text"
               asp-for="FirstName"
               class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"/>
      </div>
    </div>
    <div>
      <label asp-for="LastName"
             class="block text-sm font-medium text-gray-700">
      </label>
      <div class="mt-1">
        <input asp-for="LastName"
               type="text"
               class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"/>
      </div>
    </div>
  </div>
  <div>
    <label asp-for="CompanyName"
           class="block text-sm font-medium text-gray-700">
    </label>
    <div class="mt-1">
      <input asp-for="CompanyName"
             class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"/>
    </div>
  </div>
  <div>
    <label asp-for="Email"
           class="block text-sm font-medium text-gray-700">
    </label>
    <div class="mt-1">
      <input asp-for="Email"
             class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"/>
    </div>
  </div>
  <div>
    <label asp-for="Password"
           class="block text-sm font-medium text-gray-700">
    </label>
    <div class="mt-1">
      <input asp-for="Password"
             hx-post
             hx-action="PasswordValidation"
             hx-controller="Registration"
             type="password"
             hx-target="#passwordstrength"
             hx-trigger="keyup"
             hx-swap="innerHTML"
             class="block w-full px-3 py-2 placeholder-gray-400 border border-gray-300 rounded-md shadow-sm appearance-none focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"/>
    </div>
  </div>
  <div id="passwordstrength">
    @Html.Partial("_PasswordStrength", new PasswordValidation() { PasswordScore = null })
  </div>

  <div asp-validation-summary="All"
       class="text-red-500">
  </div>
  <div>
    <button type="submit"
            class="flex justify-center w-full px-4 py-2 text-sm font-medium text-white border border-transparent rounded-md shadow-sm bg-blue-500 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed"
            @* disabled={!passwordValid}# *@>
      Register now
    </button>
  </div>
</form>
